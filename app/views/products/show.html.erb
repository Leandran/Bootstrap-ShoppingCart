<div class="page-header">
  <ul class="list-inline pull-right">  <!--placing the buttons inline on the right-->
    <li><%= link_to 'Edit', edit_product_path(@product), :class=>"btn btn-warning" %></li>
    <li><%= link_to 'Back', products_path, :class=>"btn btn-default" %></li>
  </ul>
  <h3><%= @product.name %></h3>
</div>

<% if notice %>                     <!--show the notice object when passed from create.edit to product page-->
  <div class="alert alert-info">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<!--table to show product-->
<table class="table table bordered">
  <tr>
    <td>Name</td>
    <td><%= @product.name %></td>
  </tr>
  <tr>
    <td>Image</td>
    <td><img class="img-responsive" src=<%=asset_path @product.featImage %>/></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @product.description %></td>
  </tr>
  <tr class="success">
    <td>Price</td>
    <td><%= @product.price %></td>
  </tr>
</table>














