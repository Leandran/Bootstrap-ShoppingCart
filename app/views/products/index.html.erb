<div class="page-header">
  <%= link_to 'New Product', new_product_path, :class=>"btn btn-success pull-right" %>  <!--creates new button on right side-->
  <h3>All Products</h3>
</div>

<div class="row">
  <% @products.each do | product | %>                 <!-- looping over each product-->
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <h2><%= product.name %></h2>
    <img class="img-responsive" src=<%=asset_path product.featImage %>> <!--image will fit to the size of the grid-->
    <p><%= product.description %></p>
    <h4>R<%= product.price %></h4>
    <%= link_to 'Show', product, :class=>"btn btn-primary" %>
    <%= link_to 'Buy', '#', :class=>"btn btn-success", :data=> { :toggle=>'modal', :target=>'#buyModal'} %>

    </div>
    <% end %>
</div>